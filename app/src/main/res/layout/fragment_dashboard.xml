<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:id="@+id/relative_layout_dashboard"
    >

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:id="@+id/rlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/piechart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
        <TextView
            android:id="@+id/textview_calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/calculator"
            android:textStyle="bold"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ic_action_icons8_calculator_26"
            />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/textview_explore_bill"
                 android:text="@string/explore_bill"
                 android:textStyle="bold"

                 android:layout_alignParentRight="true"
                 android:layout_gravity="end"
                 android:layout_marginRight="16dp"
                 android:drawableLeft="@drawable/ic_action_ic_receipt_black_48dp"
                 />
         </LinearLayout>
        <TextView
            android:id="@+id/textview_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/life_after_july_1"
            android:drawablePadding="3dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_action_ic_verified_user_black_48dp_1"
            android:textStyle="bold"
            />
        <LinearLayout
            android:id="@+id/llayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlayout1"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:id="@+id/textview_faq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_icons8_question_26"
                android:drawablePadding="3dp"
                android:layout_marginLeft="16dp"
                android:text="@string/faq"
                android:layout_weight="1"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/textview_cheaper_costlier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:drawableRight="@drawable/ic_action_ic_arrow_drop_down_black_48dp"
                android:drawableLeft="@drawable/ic_action_ic_arrow_drop_up_black_48dp"
                android:text="@string/costlier_cheaper"
                android:textStyle="bold"

                />

        </LinearLayout>
    </LinearLayout>


<include layout="@layout/layout_adview_medium_rectangle"

    />
</RelativeLayout>


