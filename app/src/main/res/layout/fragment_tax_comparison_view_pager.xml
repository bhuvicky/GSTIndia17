<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_cheaper_costlier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp">

        <TextView
            style="@style/HeaderText"
            android:id="@+id/textview_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textColor="@color/color_text_black"
            android:layout_weight="0.6" />

        <TextView
            style="@style/HeaderText"
            android:id="@+id/textview_tax_post_gst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="after \nGST"
            android:textColor="@color/color_text_black"

            />

        <TextView
            style="@style/HeaderText"
            android:id="@+id/textview_tax_pre_gst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="before GST"
            android:textColor="@color/color_text_black"
            />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_cheaper_costlier_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>